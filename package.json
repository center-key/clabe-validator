{
   "name": "clabe-validator",
   "version": "2.1.0",
   "description": "Analyze or create a CLABE number for a Mexican bank account (written in functional TypeScript)",
   "license": "MIT",
   "type": "module",
   "module": "dist/clabe.js",
   "jsdelivr": "dist/clabe.min.js",
   "main": "dist/clabe.umd.cjs",
   "types": "dist/clabe.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/clabe.js",
         "require": "./dist/clabe.umd.cjs"
      },
      "./": "./dist/"
   },
   "repository": "github:center-key/clabe-validator",
   "homepage": "https://github.com/center-key/clabe-validator",
   "bugs": "https://github.com/center-key/clabe-validator/issues",
   "docs": "https://centerkey.com/clabe",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "bank-account",
      "bank",
      "clabe-number",
      "clabe-validator",
      "clabe",
      "financial",
      "javascript",
      "mexico",
      "typescript",
      "validator"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "browser": true,
      "mocha": true,
      "node": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist **/.DS_Store",
      "step:02": "jshint . --exclude-path .gitignore",
      "step:03": "eslint --max-warnings 0 . --ext .ts",
      "step:10": "tsc",
      "step:11": "tsc --module UMD --outDir build/umd",
      "step:12": "copy-file build/umd/clabe.js build/clabe.umd.cjs",
      "step:13": "esm-to-plain-js --cd=build clabe.js clabe.dev.js",
      "step:14": "uglifyjs build/clabe.dev.js --output build/clabe.min.js",
      "step:20": "add-dist-header build dist",
      "step:30": "html-validator",
      "pretest": "npm-run-all step:*",
      "test": "mocha spec/*.spec.js"
   },
   "devDependencies": {
      "@fortawesome/fontawesome-free": "~6.2",
      "@types/node": "~18.8",
      "@typescript-eslint/eslint-plugin": "~5.40",
      "@typescript-eslint/parser": "~5.40",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "copy-file-util": "~0.1",
      "copy-folder-util": "~0.2",
      "dna-engine": "~2.2",
      "eslint": "~8.25",
      "esm-to-plain-js": "~0.1",
      "jquery": "~3.6",
      "jsdom": "~20.0",
      "jshint": "~2.13",
      "mocha": "~10.0",
      "npm-run-all2": "~6.0",
      "pretty-print-json": "~1.3",
      "rimraf": "~3.0",
      "typescript": "~4.8",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.2",
      "web-ignition": "~1.5"
   }
}
